{{#if products}}
<br><br>
{{#if firstLogin}}
<div class="alert alert-info" style="text-align:center"role="alert">
  Bienvenid@ {{user}}
</div>
{{/if}}
<div class="container-sm">
    <a href="/api/productos/new" class="btn btn-primary">Nuevo Producto <i class="fas fa-plus"></i></a>
</div>
<br><br>
<div class="container-sm">
    <table class="table" style="text-align: center;">
        <tr>
            <th>title</th>
            <th>price</th>
            <th>date</th>
            <th>code</th>
            <th>stock</th>
            <th>description</th>
            <th>image</th>
        </tr>
        {{#each products}}
        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td>{{date}}</td>
            <td>{{code}}</td>
            <td>{{stock}}</td>
            <td>{{description}}</td>
            <td><img src="{{image}}"width="50px" height="50px"></td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <div class="container-sm" style="text-align: center">
        <br><br>
        <h4>No hay productos por aca</h4>
    </div>
</div>
{{/if}}
    

