{{#if products}}
<br><br>
{{#if firstLogin}}
<div class="alert alert-info" style="text-align:center" role="alert">
    Bienvenid@ {{user.user}}
</div>
{{/if}}
<div class="container-sm">
    <a href="/api/productos/new" class="btn btn-primary">Nuevo Producto <i class="fas fa-plus"></i></a>
</div>
<br><br>
<div class="container-sm">
    <div class="row" style="margin-bottom: 2px">
        {{#each products}}
        
        <div class="col-md-3" style="margin-bottom: 20px;padding:10px">
            <a href="/api/productos/detail/{{id}}" style="text-decoration: none; color:black;">
            <div class="card" id="productTemplate"  >
                <div class="card-body" style="text-align: center">
                    <img style="width: 100%" src="{{image}}">
                </div>
                <div class="card-body" style="text-align:left;max-height:400px; padding:10px;overflow:hidden">
                    <hr>
                    <h4>$ {{price}}</h4>
                    <small>{{title}}</small>
                </div>
                <div style="padding:5px">
                    <div class="row">
                        {{#if user.admin}}
                        <div class="col-9">
                            
                            <form action="/api/productos/eliminar/{{_id}}" ?_method="DELETE" method="POST"
                                style="text-align: center;text-overflow:ellipsis;">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger w-100  " type="submit"> <i
                                        class="fas fa-trash"></i></button>
                            </form>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-100 " href="/api/productos/editar/{{_id}}"><i
                                    class="fas fa-edit"></i></a>
                        </div>
                        {{/if}}
                    </div>

                </div>
            </div>
            </a>
            <!--<br>-->
        </div>
        {{/each}}
    </div>

    {{else}}
    <div class="container-sm" style="text-align: center">
        <br><br>
        <h4>No hay productos por aca</h4>
    </div>
</div>
{{/if}}