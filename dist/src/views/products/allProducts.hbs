{{#if products}}
<br><br>
{{#if firstLogin}}
<div class="alert alert-info" style="text-align:center" role="alert">
    Bienvenid@ {{user.user}}
</div>
{{/if}}

<div class="container-sm">
    <div class="row" style="margin-bottom: 2px">
        {{#each products}}

        <div class="col-md-3" style="margin-bottom: 20px;padding:10px">
            <a href="/api/productos/detail/{{_id}}" style="text-decoration: none; color:black;">
                <div class="productTemplate" name="productTemplate" id="template{{_id}}"
                    onmouseover="showDetail('{{_id}}')" onmouseleave="hideDetail('{{_id}}')">
                    <div class="imagen">
                        <img src="{{image}}">

                    </div>

                    <div class="detail" name="detail" id="{{_id}}"
                        style="text-align:left;max-height:400px; padding:10px;overflow:hidden;display:none">
                        <hr>
                        <h4>$ {{price}}</h4>
                        <small>{{title}}</small>
                        <div class="row" style="margin-top:50px">
                            <div class="col">
                                <form action="/api/productos/eliminar/{{_id}}" ?_method="DELETE" method="POST"
                                    style="text-align: center;text-overflow:ellipsis;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger w-100  " type="submit"> <i
                                            class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
            <!--<br>-->
        </div>
        {{/each}}
    </div>

    {{else}}
    <div class="container-sm" style="text-align: center">
        <br><br>
        <h4>No hay productos por aca</h4>
    </div>
</div>
{{/if}}
<script src="/js/animaciones.js"></script>