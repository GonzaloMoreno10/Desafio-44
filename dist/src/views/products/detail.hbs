<div class="container-md-5" id="productDetail">
    <div class="row">
        <div class="col">
            <img src="{{image}}" id="imagen" alt="">
        </div>
        <div class="col-md-4" id="text">
            <h2>{{title}}</h2>
            <br>
            <h6>{{description}}</h6>
